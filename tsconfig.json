{
    "compilerOptions": {
      "target": "ES2020",              
      "module": "commonjs",             
      "esModuleInterop": true,          
      "strict": true,                  
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",                
      "rootDir": "src",                
      "resolveJsonModule": true,        
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true       
    },
    "include": ["src"]
}